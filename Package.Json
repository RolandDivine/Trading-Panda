{
  "name": "my-erc20-bot",
  "version": "1.0.0",
  "description": "A Solidity smart contract for an ERC20 bot that buys and sells tokens on Uniswap with ETH.",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf artifacts/ cache/ coverage/ node_modules/ package-lock.json",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "@uniswap/lib": "^0.5.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.4.3",
    "hardhat-deploy": "^0.10.1",
    "hardhat-deploy-ethers": "^0.10.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-watcher": "^3.1.0",
    "mocha": "^9.1.1",
    "solidity-coverage": "^0.7.7"
  },
  "hardhat": {
    "defaultNetwork": "hardhat",
    "networks": {
      "hardhat": {},
      "rinkeby": {
        "url": "https://rinkeby.infura.io/v3/YOUR_PROJECT_ID",
        "accounts": ["PRIVATE_KEY"]
      }
    },
    "paths": {
      "artifacts": "./artifacts",
      "cache": "./cache",
      "sources": "./contracts",
      "tests": "./test"
    },
    "solidity": {
      "version": "0.8.0",
      "settings": {
        "optimizer": {
          "enabled": true,
          "runs": 200
        }
      }
    }
  }
}
